{
  "name": "@kenift/rollup-typescript-boilerplate",
  "version": "1.0.7",
  "description": "Kenift typescript boilerplate",
  "main": "dist/index.js",
  "types": "types/index.d.ts",
  "scripts": {
    "test": "jest",
    "build": "rollup -c",
    "release": "semantic-release"
  },
  "release": {
    "branches": [
      "master",
      "v1.x.x"
    ],
    "repositoryUrl": "https://github.com/kenift/rollup-typescript-boilerplate.git",
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "angular",
          "releaseRules": [
            {
              "type": "build",
              "release": "patch"
            },
            {
              "type": "fix",
              "release": "patch"
            },
            {
              "type": "feat",
              "release": "minor"
            },
            {
              "type": "break",
              "release": "major"
            },
            {
              "type": "test",
              "release": "patch"
            },
            {
              "type": "docs",
              "release": "patch"
            },
            {
              "type": "refactor",
              "release": "patch"
            },
            {
              "type": "style",
              "release": "patch"
            }
          ],
          "parserOpts": {
            "noteKeywords": [
              "BREAKING CHANGE",
              "BREAKING CHANGES"
            ]
          }
        }
      ],
      ["@semantic-release/release-notes-generator", {
        "preset": "angular",
        "parserOpts": {
          "noteKeywords": ["BREAKING CHANGE", "BREAKING CHANGES", "BREAKING"]
        },
        "writerOpts": {
          "commitsSort": ["subject", "scope"]
        }
      }],
      "@semantic-release/github",
      "@semantic-release/changelog",
      "@semantic-release/exec",
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json",
            "CHANGELOG.md"
          ],
          "message": "chore(release): <%= nextRelease.version %> - <%= new Date().toLocaleDateString('en-US', {year: 'numeric', month: 'short', day: 'numeric', hour: 'numeric', minute: 'numeric' }) %> [skip ci]"
        }
      ]
    ]
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://npm.pkg.github.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kenift/rollup-typescript-boilerplate.git"
  },
  "keywords": [
    "Kenift"
  ],
  "author": {
    "name": "Paulo Vernetti",
    "email": "vernetti@kenift.com",
    "url": "https://github.com/PauloVernetti"
  },
  "bugs": {
    "url": "https://github.com/kenift/rollup-typescript-boilerplate/issues"
  },
  "homepage": "https://github.com/kenift/rollup-typescript-boilerplate#readme",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^11.0.2",
    "@rollup/plugin-json": "^4.0.2",
    "@rollup/plugin-node-resolve": "^7.1.1",
    "@semantic-release/changelog": "^5.0.0",
    "@semantic-release/exec": "^5.0.0",
    "@semantic-release/git": "^9.0.0",
    "@types/estree": "0.0.44",
    "@types/node": "^13.9.3",
    "jest": "^25.1.0",
    "rollup": "^2.2.0",
    "rollup-plugin-terser": "^5.3.0",
    "rollup-plugin-typescript2": "^0.26.0",
    "semantic-release": "^17.0.4",
    "tslib": "^1.11.1",
    "typescript": "^3.8.3"
  },
  "license": "MIT"
}
