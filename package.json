{
  "name": "@kenift/localizer",
  "version": "0.0.1",
  "description": "Kenift tool to provide internalization and localization for own projects",
  "main": "dist/index.js",
  "types": "types/index.d.ts",
  "scripts": {
    "test": "jest",
    "build": "rollup -c",
    "release": "semantic-release"
  },
  "release": {
    "branches": [
      "master",
      {
        "name": "v1.x.x",
        "prerelease": false
      },
      {
        "name": "v2.x.x",
        "prerelease": false
      },
      {
        "name": "v3.x.x",
        "prerelease": false
      }
    ],
    "repositoryUrl": "https://github.com/kenift/localizer.git",
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "angular",
          "releaseRules": [
            {"type": "build", "release": "patch"},
            {"type": "fix", "release": "patch"},
            {"type": "feat","release": "minor"},
            {"type": "break","release": "major"},
            {"type": "test","release": "patch"},
            {"type": "docs","release": "patch"},
            {"type": "refactor","release": "patch"},
            {"type": "style","release": "patch"}
          ],
          "parserOpts": {
            "noteKeywords": [
              "BREAKING CHANGE",
              "BREAKING CHANGES"
            ]
          }
        }
      ],
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/github",
      "@semantic-release/changelog",
      "@semantic-release/exec"
    ]
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://npm.pkg.github.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kenift/localizer.git"
  },
  "keywords": [
    "i18n",
    "localization",
    "Kenift"
  ],
  "author": {
    "name": "Paulo Vernetti",
    "email": "vernetti@kenift.com",
    "url": "https://github.com/PauloVernetti"
  },
  "bugs": {
    "url": "https://github.com/kenift/localizer/issues"
  },
  "homepage": "https://github.com/kenift/localizer#readme",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^11.0.2",
    "@rollup/plugin-json": "^4.0.2",
    "@rollup/plugin-node-resolve": "^7.1.1",
    "@semantic-release/changelog": "^5.0.0",
    "@semantic-release/exec": "^5.0.0",
    "@semantic-release/git": "^9.0.0",
    "@types/estree": "0.0.44",
    "@types/node": "^13.9.3",
    "jest": "^25.1.0",
    "rollup": "^2.2.0",
    "rollup-plugin-terser": "^5.3.0",
    "rollup-plugin-typescript2": "^0.26.0",
    "semantic-release": "^17.0.4",
    "tslib": "^1.11.1",
    "typescript": "^3.8.3"
  },
  "license": "MIT"
}
